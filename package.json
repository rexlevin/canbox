{
    "name": "canbox",
    "private": true,
    "version": "0.0.1",
    "description": "Canbox - Some Useful Apps",
    "main": "main.js",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "dev": "vite --host 0.0.0.0 --port 12333",
        "build": "vite build",
        "preview": "vite preview",
        "start": "electron . --no-sandbox",
        "startExt": "electron . --no-sandbox id:c9630c9c60af4c21b4a62da4e002e53f",
        "build-dist:win": "electron-builder -w",
        "build-dist:linux": "electron-builder -l"
    },
    "build": {
        "appId": "com.github.lizl6.canbox",
        "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
        "asar": true,
        "files": [
            "build/**/*",
            "modules/**/*",
            "public/**/*",
            "logo.png",
            "main.js",
            "preload.js",
            "ipcHandlers.js",
            "!node_modules/electron"
        ],
        "directories": {
            "output": "./dist"
        },
        "linux": {
            "target": [
                "appimage"
            ],
            "icon": "./build/logo.png",
            "category": "System;Applications;Utility;",
            "desktop": {
                "Name": "Canbox",
                "GenericName": "Canbox",
                "Comment": "Some useful apps you need for your life",
                "Terminal": false
            }
        },
        "win": {
            "icon": "./logo.png",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": true,
            "shortcutName": "canbox"
        }
    },
    "dependencies": {
        "asar": "^3.2.0",
        "electron-store": "^8.2.0",
        "element-plus": "^2.8.3",
        "fs-extra": "^11.3.0",
        "glob": "^11.0.3",
        "marked": "^14.1.3",
        "nanoid-cjs": "^0.0.7",
        "pouchdb": "^9.0.0",
        "rimraf": "^6.0.1",
        "uuid": "^10.0.0",
        "vue": "^3.4.21",
        "vue-router": "^4.4.5"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.0.4",
        "electron": "^35.7.2",
        "vite": "^5.4.6"
    }
}
