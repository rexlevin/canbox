{
    "name": "canbox",
    "private": true,
    "version": "0.0.1",
    "description": "Canbox - Some Useful Apps",
    "main": "main.js",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "start": "electron . --no-sandbox",
        "startExt": "electron . --no-sandbox id:4fc5b570e0d0aecb11c1d5d3aa8e6ecd",
        "build:win": "electron-builder -w",
        "build:linux": "electron-builder -l"
    },
    "build": {
        "appId": "com.github.lizl6.canbox",
        "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
        "asar": true,
        "files": [
            "dist/**/*",
            "modules/**/*",
            "public/**/*"
        ],
        "directories": {
            "output": "./build"
        },
        "linux": {
            "target": [
                "appimage"
            ],
            "icon": "./public/logo.png"
        },
        "win": {
            "icon": "./public/logo.png",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": true,
            "shortcutName": "canbox"
        }
    },
    "dependencies": {
        "@electron/remote": "^2.1.2",
        "electron-store": "^8.2.0",
        "element-plus": "^2.8.3",
        "marked": "^14.1.3",
        "nanoid-cjs": "^0.0.7",
        "pouchdb": "^9.0.0",
        "uuid": "^10.0.0",
        "vue": "^3.4.21",
        "vue-router": "^4.4.5"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.0.4",
        "electron": "^32.1.2",
        "vite": "^5.4.6"
    }
}
